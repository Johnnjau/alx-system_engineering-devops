#!/usr/bin/env bash
# Configures an Ubuntu server as follows:
#   - localhost resolves to 127.0.0.2
#   - facebook.com resolves to 8.8.8.8

# Make a backup of the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Update the /etc/hosts file with the new mappings
sudo sh -c 'echo "127.0.0.2 localhost" > /etc/hosts.new'
sudo sh -c 'echo "8.8.8.8 facebook.com" >> /etc/hosts.new'

# Replace the original /etc/hosts file with the updated one
sudo mv /etc/hosts.new /etc/hosts

# Restart the networking service to apply the changes
sudo service networking restart
