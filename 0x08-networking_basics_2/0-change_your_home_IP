#!/bin/bash

# Update /etc/hosts file to map localhost to 127.0.0.2
sudo sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts

# Update /etc/hosts file to map facebook.com to 8.8.8.8
sudo sed -i 's/157.240.11.35/8.8.8.8/g' /etc/hosts

# Verify changes by pinging localhost and facebook.com
ping -c 1 localhost
ping -c 1 facebook.com
